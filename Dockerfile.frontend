# Use node image to build and run Vue.js development server
FROM node:14 AS build

# Set the working directory
WORKDIR /app

# Copy the package.json and package-lock.json to the current working directory
COPY ./src/Frontend/semaphore-ui/package.json ./
COPY ./package-lock.json ./

# Install dependencies
RUN npm install

# Copy the rest of the source code
COPY ./src/Frontend/semaphore-ui/ ./

#Expose the port
EXPOSE 8080

# Start the Vue.js development server
CMD ["npm", "run", "serve"]
